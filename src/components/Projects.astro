---
import Image from "astro/components/Image.astro";
---

<section id="projects" class="flex flex-col mb-8 px-4 w-full">
  <h2 class="text-6xl font-bold mb-8 text-center md:text-left text-[#622aff]">
    Projects
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 text-center">
    <div
      id="project1"
      class="border-2 border-[#622aff] rounded-[20px] p-4 hover:bg-[#ebebed]"
    >
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-1">
          <Image src="/images/curify.svg" width="40" height="40" alt="" />
          <h4 class="font-bold text-2xl">Curify</h4>
        </div>
        <div>
          <p class="font-bold text-[0.55rem]">FULL-STACK</p>
          <div class="flex items-center justify-between">
            <Image
              src="/images/angular-logo.svg"
              width="18"
              height="18"
              alt=""
            />
            <Image
              src="/images/dotnet-logo.svg"
              width="25"
              height="25"
              alt=""
            />
          </div>
        </div>
      </div>

      <p class="mb-4 text-left font-bold">Healthcare Web Application</p>

      <p class="md:hover:ml-1 md:text-left text-center w-fit">
        <a class="hover:underline text-[#622aff]" href="/project/curify">Explore the full project details &gt;</a>
      </p>
    </div>

    <div
      id="project2"
      class="border-2 border-[#622aff] rounded-[20px] p-4 hover:bg-[#ebebed]"
    >
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-1">
          <Image src="/images/msg.svg" width="30" height="30" alt="" />
          <h4 class="font-bold text-2xl">MSG</h4>
        </div>
        <div>
          <p class="font-bold text-[0.55rem]">FULL-STACK</p>
          <div class="flex items-center justify-between">
            <Image
              src="/images/angular-logo.svg"
              width="18"
              height="18"
              alt=""
            />
            <Image
              src="/images/dotnet-logo.svg"
              width="25"
              height="25"
              alt=""
            />
          </div>
        </div>
      </div>

      <p class="mb-4 text-left font-bold">Real-time Chat Web Application</p>

      <p class="md:hover:ml-1 md:text-left text-center w-fit">
        <a class="hover:underline text-[#622aff]" href="/project/msg">Explore the full project details &gt;</a>
      </p>
    </div>

    <div
      id="project3"
      class="border-2 border-[#622aff] rounded-[20px] p-4 hover:bg-[#ebebed]"
    >
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-1">
          <Image src="/images/nike.svg" width="35" height="35" alt="" />
          <h4 class="font-bold text-2xl">Nike Store</h4>
        </div>
        <div>
          <p class="font-bold text-[0.55rem]">FRONT-END</p>
          <div class="flex items-center justify-between">
            <Image src="/images/next-logo.svg" width="20" height="20" alt="" />
            <Image src="/images/redux.svg" width="19" height="19" alt="" />
          </div>
        </div>
      </div>

      <p class="mb-4 text-left font-bold">E-Commerce Web Application</p>

      <p class="md:hover:ml-1 md:text-left text-center w-fit">
        <a class="hover:underline text-[#622aff]" href="project/nike">Explore the full project details &gt;</a>
      </p>
    </div>
  </div>
</section>
