---
import Image from "astro/components/Image.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title=".ehab - projects">
  <section class="flex flex-col items-center justify-center w-full h-screen">
    <Image
      class="mb-10"
      src="/images/ghchar1.png"
      width="250"
      height="250"
      alt=""
    />

    <div class="flex flex-col items-center justify-center">
      <div class="flex items-center gap-3">
        <h4 class="font-bold text-6xl">Nike Store</h4>

        <div class="flex flex-col items-center">
          <p class="font-bold text-[0.55rem]">FRONT-END</p>
          <div class="flex items-center gap-1">
            <Image src="/images/next-logo.svg" width="18" height="18" alt="" />
            <Image src="/images/redux.svg" width="25" height="25" alt="" />
          </div>
        </div>
      </div>
    </div>

    <p class="font-bold text-xl">E-Commerce Web Application</p>

    <p class="text-center font-bold text-lg font-helvetica p-10">
      Soon ✦ Soon ✦ Soon
    </p>

<a class="hover:underline text-[#622aff] font-bold" href="">Explore the full project on GitHub</a>
</section>
</Layout>